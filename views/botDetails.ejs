<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= bot.client_name %> Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">

  <div class="container mt-5">
    <h1 class="fw-bold mb-4"><%= bot.client_name %> â€” Details</h1>

    <div class="card shadow-sm border-0 mb-4">
      <div class="card-body">

        <!-- TOKEN -->
        <h5 class="fw-semibold">Bot Token</h5>
        <p class="text-primary"><%= bot.token %></p>

        <!-- SERVERS -->
        <h5 class="fw-semibold">Servers (<%= bot.servers.length %>)</h5>

        <% if (bot.servers.length === 0) { %>
          <p class="text-muted">No servers connected.</p>
        <% } else { %>
          <ul class="list-group mb-3">
            <% bot.servers.forEach(s => { %>
              <li class="list-group-item">

                <strong><%= s.name || "Unknown" %></strong>

                <br>

                <!-- INVITE -->
                <% if (s.invite) { %>
                  <a href="<%= s.invite %>" class="text-success fw-bold" target="_blank">Invite Link</a>
                <% } else { %>
                  <span class="text-danger">No invite</span>
                <% } %>

                <br>

                <!-- ADMIN PERMISSION -->
                <% if (s.admin) { %>
                  <span class="badge bg-success mt-1">Admin Access</span>
                <% } else { %>
                  <span class="badge bg-secondary mt-1">No Admin</span>
                <% } %>

              </li>
            <% }) %>
          </ul>
        <% } %>

        <!-- APPROVAL -->
        <h5 class="fw-semibold">Approval Status</h5>
        <p>
          <% if (bot.approved) { %>
            <span class="badge bg-success">Approved âœ”</span>
          <% } else { %>
            <span class="badge bg-danger">Not Approved âœ–</span>
          <% } %>
        </p>

        <!-- PASSWORD -->
        <h5 class="fw-semibold">Password Protection</h5>
        <p>
          <% if (bot.passwordEnabled) { %>
            <span class="badge bg-warning text-dark">Enabled ðŸ”’</span>
          <% } else { %>
            <span class="badge bg-secondary">Disabled ðŸ”“</span>
          <% } %>
        </p>

        <!-- STOP BOT -->
        <form action="/dashboard/stop-bot" method="POST" class="mb-3">
          <input type="hidden" name="token" value="<%= bot.token %>">
          <button class="btn btn-danger w-100">STOP BOT</button>
        </form>

        <!-- PASSWORD UPDATE -->
        <form action="/dashboard/password" method="POST">
          <input type="hidden" name="token" value="<%= bot.token %>">
          <input type="hidden" name="enable" value="<%= bot.passwordEnabled ? "false" : "true" %>">

          <% if (!bot.passwordEnabled) { %>
            <input type="text" name="password" placeholder="New Password" class="form-control mb-2" required>
          <% } %>

          <button class="btn btn-warning w-100">
            <%= bot.passwordEnabled ? "Disable Password" : "Enable Password" %>
          </button>
        </form>

      </div>
    </div>

    <a href="/" class="btn btn-secondary">Back to Dashboard</a>

  </div>

</body>
</html>
