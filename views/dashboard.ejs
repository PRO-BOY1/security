<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bot Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Bot Dashboard</h1>
    <div class="row">
      <% bots.forEach(bot => { %>
        <div class="col-md-4 mb-3">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= bot.client_name %></h5>
              <p class="card-text">Servers: <%= bot.servers.length %></p>
              <a href="/dashboard/bot/<%= bot.token %>" class="btn btn-primary btn-sm">See Details</a>
              <% if(bot.approved) { %>
                <form action="/dashboard/unapprove" method="POST" class="d-inline">
                  <input type="hidden" name="token" value="<%= bot.token %>">
                  <button type="submit" class="btn btn-danger btn-sm">Remove Approval</button>
                </form>
              <% } else { %>
                <form action="/dashboard/approve" method="POST" class="d-inline">
                  <input type="hidden" name="token" value="<%= bot.token %>">
                  <button type="submit" class="btn btn-success btn-sm">Approve</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
